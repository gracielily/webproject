{% set navPages = collections.all | eleventyNavigation %}

<nav id="navigation">
    <ul>
        {%- for navPage in navPages %}
            {% if page.filePathStem == "/index" %}
                {% if navPage.key != "Home" %}
                    <li>
                        <a href="{{ navPage.url | url }}">{{ navPage.title }}</a>
                    </li>
                {% endif %}
            {% else %}
                <li{% if navPage.url == page.url %} class="active"{% endif %}>
                    <a href="{{ navPage.url | url }}">{{ navPage.title }}</a>
                </li>
            {% endif %}
        {%- endfor %}
    </ul>
</nav>
