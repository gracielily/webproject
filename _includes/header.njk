<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    {% set navPages = collections.all | eleventyNavigation %}
    {# Dynamic title based on the current page #}
    {%- for navPage in navPages %}
        {% if navPage.url == page.url %}
                <title>{{ navPage.key }} | Pokémon Sword & Shield</title>
        {% else %}
            {% for child in navPage.children %}
                {% if page.url == child.url %}
                <title>{{ child.key }} | Pokémon Sword & Shield</title>
                {% endif %}
            {%- endfor %}
        {% endif %}
    {%- endfor %}
    <link rel="icon" type="image/x-icon" href="{{ '/img/favicon.png' | url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/components/navigation.css' | url }}">